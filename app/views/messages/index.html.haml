.header
  = render 'shared/header-left'
  = render 'shared/header__right'
.contents
  = render 'shared/contents-side'
  .contents__main
    .message-list
      = render partial: 'message', collection: @messages
    .contents__main--form
      .input-box
        = form_for [@group, @message] do |f|
          = f.label :image, class: 'input-box__image' do
            %i{class:"fa fa-lg fa-image"}
            =f.file_field :image, class: 'input-box__image-file', id: "message_image"
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.submit 'Send', class: 'input-box__btn'
